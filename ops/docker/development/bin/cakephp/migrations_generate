#!/bin/sh

# ---------------------------
#
# docker-compose alias
#
# ---------------------------

cd `dirname $0`/../../../../../

clear >/dev/tty
echo "Give Me Migrations File Name (e.g. RemoveFacebookIdOnUsers): " >/dev/tty
# Show cursor
tput cnorm >/dev/tty 2>/dev/null || tput vs >/dev/tty 2>/dev/null
read input </dev/tty
ops/docker/development/bin/cakephp/cake  "bake migration_diff_extra $input"
